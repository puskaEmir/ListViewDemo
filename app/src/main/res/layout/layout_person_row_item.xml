<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/nameTextView"
        android:text="IME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/surnameTextView"
        android:text="Å REZIME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/nameTextView"
        android:layout_alignStart="@+id/nameTextView"
        android:layout_alignLeft="@+id/nameTextView"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/genderTextView"
        android:text="SPOL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignBottom="@+id/surnameTextView"
        android:layout_alignRight="@+id/nationalityTextView"
        android:layout_alignEnd="@+id/nationalityTextView"
        android:layout_alignLeft="@+id/nationalityTextView"
        android:layout_alignStart="@+id/nationalityTextView"/>

    <TextView
        android:id="@+id/nationalityTextView"
        android:text="NATIONALITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignTop="@+id/nameTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>